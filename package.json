{
    "name": "controller",
    "version": "2.0.0",
    "description": "",
    "type": "commonjs",
    "main": "index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only  src/app.ts",
        "prod": "cross-env NODE_ENV=production node --experimental-modules src/app.js",
        "build": "RD /S Dist && tsc",
        "build:clean": "RD /S Dist && echo S",
        "build:watch": "RD /S Dist && tsc -w",
        "clean": "rm -rf node_modules coverage dist .nyc_output",
        "start:dev": "copy .env.development Dist && cd Dist && npm install && cross-env NODE_ENV=development node --experimental-modules src/app.js",
        "start:prod": "copy .env.production Dist && cd Dist && npm install && cross-env NODE_ENV=production node --experimental-modules src/app.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JulioRom/controller_build_2.0.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/JulioRom/controller_build_2.0/issues"
    },
    "homepage": "https://github.com/JulioRom/controller_build_2.0#readme",
    "dependencies": {
        "config": "^3.3.7",
        "cors": "^2.8.5",
        "dayjs": "^1.10.7",
        "dotenv": "^14.1.0",
        "express": "^4.17.2",
        "express-response-formatter": "^2.0.2",
        "node-opcua-client": "^2.62.7",
        "pino": "^7.6.3",
        "pino-pretty": "^7.3.0",
        "swagger-jsdoc": "^6.1.0",
        "swagger-ui-express": "^4.3.0"
    },
    "devDependencies": {
        "@tsconfig/node12": "^1.0.9",
        "@types/body-parser": "^1.19.2",
        "@types/config": "0.0.41",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/node": "^17.0.8",
        "@types/pino": "^7.0.5",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "cross-env": "^7.0.3",
        "ts-node-dev": "^1.1.8",
        "typescript": "^4.5.4"
    }
}
